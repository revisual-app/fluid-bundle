{
  "name": "fluid-bundle",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "deploy": "npm run build && wrangler deploy",
    "build": "npm run build:css",
    "dev": "wrangler dev",
    "start": "npm-run-all --parallel watch:css dev",
    "build:css": "sass src/styles/index.scss src/styles/index.tmp.css && postcss src/styles/index.tmp.css -o public/css/output.css",
    "watch:css": "chokidar 'src/styles/**/*.scss' -c 'npm run build:css'",
    "test": "vitest"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.19",
    "autoprefixer": "^10.4.21",
    "chokidar-cli": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "sass": "^1.92.1",
    "vitest": "~3.2.0",
    "wrangler": "^4.25.1"
  },
  "dependencies": {
    "google-auth-library": "^10.1.0",
    "googleapis": "^153.0.0"
  }
}
